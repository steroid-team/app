    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="24dp"
    android:height="24dp"
    android:viewportHeight="24"
    android:viewportWidth="24">

    <!-- path data for a circle: -->
    <!--A  rx, ry  x-axis-rotation  large-arc-flag, sweep-flag  x,  y -->
